#!/bin/sh
echo
echo "Running pre-commit hooks..."
echo

echo "Terraform docs:"
SRC_PATTERN="terraform/modules/"
if git diff --cached --name-only | grep --quiet "$SRC_PATTERN"
then
  # Ensure terraform-docs is installed
  if ! command -v terraform-docs >/dev/null; then
    echo "terraform-docs is not installed ðŸ˜¥. Please install terraform-docs: https://terraform-docs.io/user-guide/installation/"
    exit 1
  fi

  # Keep module docs up to date
  for d in terraform/modules/*; do
    if terraform-docs md "$d" > "$d/README.md"; then
      echo "Documentation for module $d/README.md written... ðŸ¤ "
      git add "./$d/README.md"
    fi
  done
  echo
else
  echo "No terraform files changed. Not writing docs ðŸ˜´"
  echo
fi



echo "Terraform format:"
SRC_PATTERN="terraform/modules/"
if git diff --cached --name-only | grep --quiet "$SRC_PATTERN"
then
  # Ensure terraform is installed
  if ! command -v terraform >/dev/null; then
    echo "Terraform is not installed ðŸ˜¥. Please install Terraform: https://www.terraform.io/downloads"
    exit 1
  fi

  # Keep module formatted
  for d in terraform/modules/*; do
    if files=$(terraform fmt "$d") ; then
      for f in $files; do
        echo "File $f formatted... ðŸ¤ "
        git add "$f"
      done
    fi
  done
  echo
else
  echo "No terraform files changed. Not formatting ðŸ˜´"
  echo
fi


echo "Helm docs:"
SRC_PATTERN="helm/charts/"
if git diff --cached --name-only | grep --quiet "$SRC_PATTERN"
then
  # Ensure helm-docs is installed
  if ! command -v helm-docs >/dev/null; then
    echo "helm-docs is not installed ðŸ˜¥. Please install helm-docs: [helm-docs](https://github.com/norwoodj/helm-docs)"
    exit 1
  fi

  # Keep chart docs up to date
  for d in helm/charts/*; do
    if pushd "$d" && helm-docs && popd; then
      echo "Documentation for chart $d written... ðŸ¤ "
      git add "$d/README.md"
    fi
  done
  echo
else
  echo "No helm files changed. Not writing docs ðŸ˜´"
  echo
fi

